<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10sp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/replies_profile_image"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="15sp"
        android:scaleType="centerCrop"
        android:src="@drawable/user_black"
        app:civ_border_color="@color/grey75"
        app:civ_border_width="1sp" />

    <TextView
        android:id="@+id/replies_item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="15sp"
        android:layout_toEndOf="@id/replies_profile_image"
        android:text="Username"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/black"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/reply_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="10sp"
        android:textColor="@color/greyFont" />

    <TextView
        android:id="@+id/replies_item_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/replies_item_username"
        android:layout_alignStart="@id/replies_item_username"
        android:layout_marginEnd="5sp"
        android:layout_marginTop="10sp"
        android:paddingEnd="5sp"
        android:paddingBottom="5sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />



    <TextView
        android:id="@+id/reply_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@id/replies_item_reply"
        android:layout_alignStart="@id/replies_item_username"
        android:text="reply"
        android:layout_marginTop="10sp"
        android:textColor="@color/grey"/>

    <TextView
        android:id="@+id/is_reply_instructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/replies_item_reply"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10sp"
        android:layout_toEndOf="@id/reply_txt"
        android:text="instructor"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_green_light"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="invisible" />


</RelativeLayout>