<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorShimmer"
    android:layout_marginTop="5sp"
    android:paddingTop="20sp"
    android:paddingBottom="20sp">

    <ImageView
        android:id="@+id/file_type"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp" />

    <TextView
        android:id="@+id/free_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="20sp"
        android:textSize="12sp"
        android:layout_below="@id/file_type"
        android:text="Free"
        android:textColor="@color/darkGray" />

    <ImageView
        android:id="@+id/subscription_type"
        android:layout_width="16sp"
        android:layout_height="16sp"
        android:layout_below="@id/file_type"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="20sp"
        android:src="@drawable/premium_badge"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50sp"
        android:layout_toEndOf="@id/file_type"
        android:orientation="vertical">


        <TextView
            android:id="@+id/media_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="1"
            android:layout_gravity="top"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/doc_or_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="10:42 min"
            android:layout_marginEnd="10sp"
            android:textColor="@color/darkGray"
            android:textSize="12sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/download_media_button"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:src="@drawable/cloud"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10sp" />

    <ImageView
        android:id="@+id/downloaded_media_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_downloaded_check"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10sp"
        android:textColor="@color/darkGray"
        android:textSize="12sp" />

    <ProgressBar
        android:id="@+id/downloading_media_button"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10sp"

        android:visibility="gone" />


</RelativeLayout>